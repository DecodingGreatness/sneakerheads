<%# Transaction success page %>
<div class="container">
  <div class="row">
    <div class="col-3">
      <img src="#" alt="carousel gallery">
    </div>
  </div>
  <div>
    <div class="row">
       <h2>Transaction No.: <%= @transaction.id %></h2>
    </div>

    <div class="row">
      <div class="col-3">
        <p>Description:</p>
      </div>
      <div class="col-6">
        <p><%= @sneaker.brand %> <%= @sneaker.model %>, Size: <%= @sneaker.size %></p>
      </div>
    </div>

    <div class="row">
      <div class="col-3">
        <p>Sneaker ID:</p>
      </div>
      <div class="col-6">
        <p><%= @sneaker.id %></p>
      </div>
    </div>

    <div class="row">
      <div class="col-3">
        <p>Price:</p>
      </div>
      <div class="col-6">
        <p><%= @sneaker.price %></p>
      </div>
    </div>

    <div class="row">
       <%= link_to "Home", root_path %>
    </div>
  </div>
</div>
