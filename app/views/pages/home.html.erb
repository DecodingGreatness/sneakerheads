<div class="bg">
  <div class="container">
    <div class="row">

      <div class="username d-flex justify-content-end py-4 mb-5">
        <% if user_signed_in? %>
          <p class="light">
          <h2>WELCOME <%= current_user.username.upcase %>!</h2>
          </p>
        <% end %>
      </div>
    </div>

    <div class="arrivals d-flex align-items-center mt-5 pt-5">
      <div class="row">
        <div class="col-6">
          <h1>SneakerHeads</h1>
          <button class="b">LASTEST ARRIVALS</button>
        </div>
      </div>
    </div>

    <div class="row">

    <% Sneaker::BRANDS.each do |brand| %>
      <div class="col-3">
        <div class="brand-card my-3"  style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/Qtd_xt0CCzY)">
          <% count = 0 %>
          <h2 class="a"><%= link_to brand, brand_sneakers_path(brand) %></h2>
            <% count+=1 %>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>
